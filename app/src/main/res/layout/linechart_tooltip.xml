<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_navigation_placeholder"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black_semi_transparent"
        android:textSize="16sp"></TextView>

    <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/materialIconView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:scaleType="center"
        app:materialIcon="dumbbell"
        app:materialIconColor="@color/black_semi_transparent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/value"
        android:layout_toRightOf="@+id/value"
        app:materialIconSize="20dp" />
</RelativeLayout>