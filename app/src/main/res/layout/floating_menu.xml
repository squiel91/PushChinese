<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/easy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:src="@drawable/icon_easy"
        android:clickable="true"
        android:elevation="8dp"
        app:backgroundTint="@color/white"
        app:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/main_action_button"
        app:layout_constraintEnd_toEndOf="@+id/main_action_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/normal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:elevation="8dp"
        android:src="@drawable/icon_ok"
        app:backgroundTint="@color/white"
        app:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/easy_button"
        app:layout_constraintEnd_toEndOf="@+id/easy_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/hard_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:elevation="8dp"
        android:scaleType="center"
        android:src="@drawable/icon_hard"
        app:backgroundTint="@color/white"
        app:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/normal_button"
        app:layout_constraintEnd_toEndOf="@+id/normal_button"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="auto"
        android:scaleType="centerCrop"
        app:backgroundTint="@color/primary_color"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>