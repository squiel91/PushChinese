<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@+id/record_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        app:materialIcon="microphone"
        app:materialIconColor="@color/primary_color"
        app:materialIconSize="30dp" />

    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@+id/reproduce_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:visibility="gone"
        app:materialIcon="play"
        app:materialIconColor="@color/primary_color"
        app:materialIconSize="30dp" />

    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@+id/delete_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:visibility="gone"
        app:materialIcon="close"
        app:materialIconColor="@color/primary_dark_color"
        app:materialIconSize="30dp" />
</LinearLayout>