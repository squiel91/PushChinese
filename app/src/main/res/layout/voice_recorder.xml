<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">

    <TextView
        android:id="@+id/text_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:singleLine="false"
        android:text="Record your pronunciation"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/play_bottom"
        app:layout_constraintStart_toEndOf="@+id/record_bottom"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/record_bottom"
        android:layout_width="79dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/record_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:maxHeight="10dp"
        app:backgroundTint="@color/primary_color"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/record_bottom"
        app:layout_constraintEnd_toEndOf="@+id/record_bottom"
        app:layout_constraintStart_toStartOf="@+id/record_bottom"
        app:layout_constraintTop_toTopOf="@+id/record_bottom"
        app:srcCompat="@drawable/icon_record_big" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play_bottom"
        android:layout_width="79dp"
        android:layout_height="63dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:maxHeight="10dp"
        app:backgroundTint="@color/primary_color"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/play_bottom"
        app:layout_constraintEnd_toEndOf="@+id/play_bottom"
        app:layout_constraintStart_toStartOf="@+id/play_bottom"
        app:layout_constraintTop_toTopOf="@+id/play_bottom"
        app:srcCompat="@drawable/icon_play" />

</androidx.constraintlayout.widget.ConstraintLayout>