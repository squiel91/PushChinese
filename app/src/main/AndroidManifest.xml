<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.push_chinese">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        tools:replace="android:allowBackup"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Push Chinese"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".others.NotificationsGuide" android:label="@string/title_activity_notifications_guide"/>
        <activity android:name=".activities.OpenSource"  android:label="@string/title_activity_open_source" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="Settings" />
        <activity android:name=".activities.EntryPoint">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Onboarding" android:configChanges="orientation|screenSize"/>
        <activity android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize" />

        <provider
            android:name=".data.PushProvider"
            android:authorities="com.example.android.push_chinese"
            android:exported="false" />
    </application>

</manifest>