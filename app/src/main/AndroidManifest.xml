<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.everytian">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.STORAGE"/>

    <application
        tools:replace="android:label,android:allowBackup"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Everytiān"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.everytian.activities.OpenSource"  android:label="@string/title_activity_open_source" />
        <activity android:name="com.example.android.everytian.activities.AddNewWord"  android:label="New Word" />
        <activity
            android:name="com.example.android.everytian.activities.SettingsActivity"
            android:label="Settings" />
        <activity android:name="com.example.android.everytian.activities.EntryPoint" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.android.everytian.onboarding.Onboarding" android:configChanges="orientation|screenSize"/>
        <activity android:name="com.example.android.everytian.activities.MainActivity"
            android:configChanges="orientation|screenSize" />

        <provider
            android:name="com.example.android.everytian.data.PushProvider"
            android:authorities="com.example.android.everytian"
            android:exported="false" />
    </application>

</manifest>